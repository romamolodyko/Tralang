<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="Page Description">
        <meta name="author" content="Roma">
        <title>Page Title</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>


        {% stylesheets '@TralangBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

    </head>
    <body>

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-nav">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path("main") }}">Tralang</a>
            </div>

            {% block header %}
                <ul class="nav nav-pills pull-right">
                    <li><a>Above</a></li>
                    <li class="sign-in-click"><a href="javascript:void(0)">Sign in</a></li>
                    <li class="sign-up-click"><a href="javascript:void(0)">Sign up</a></li>
                </ul>

            {% endblock %}
        </div>
    </div>
    <div class="content"></div>
    <div class="log">
            <div class="sign-up">
                <div class="panel panel-default" style="width: 300px; margin: auto;">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sign Up</h3>
                    </div>
                    <div class="panel-body">
                        {% block log %}
                        <form method="post" id="form-sign-up" role="form" onsubmit="return false">
                            <div class="form-group">
                                <label for="user_username" class="required">Name</label>
                                <input type="text" class="form-control" name="user[username]" required="required" id="user_username" placeholder="Input name" maxlength="30" minlength="3">
                            </div>
                            <div class="form-group">
                                <label for="user_email" class="required">Email</label>
                                <input type="email" class="form-control" name="user[email]" required="required" id="user_email" maxlength="30" minlength="5" placeholder="Input email">
                            </div>
                            <div class="form-group">
                                <label for="user_plainPassword_first" class="required">Password</label>
                                <input type="password" class="form-control" name="user[plainPassword][first]" required="required" id="user_plainPassword_first" maxlength="20" minlength="5" placeholder="Input password">
                            </div>
                            <div class="form-group">
                                <label for="user_plainPassword_second" class="required">Repeat Password</label>
                                <input type="password" class="form-control" name="user[plainPassword][second]" required="required" id="user_plainPassword_second" maxlength="20" minlength="5" placeholder="Input password">
                            </div>
                            <button type="submit" class="check-sign-up btn btn-primary pull-left">Sign Up</button>
                        </form>
                        {% endblock %}
                    </div>
                </div>
                <div class="alert alert-warning warning-sign-up" style="width: 300px;margin: auto;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <strong></strong>
                </div>
            </div>
    {% block body %}{% endblock %}
    {% javascripts '@TralangBundle/Resources/public/js/*'
    '@TralangBundle/Resources/public/js/ModeTraining/*'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    </body>
</html>