<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    {% block stylesheets %}
        {% stylesheets '@TralangBundle/Resources/public/css/*'  filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="size-nav">
        <a class="navbar-brand" href="{{ path('homepage') }}">Tralang</a>
        <ul class="nav nav-pills pull-right">
            <li>
                <a href="{{ path('glossary') }}">Add words</a>
            </li>
            <li>
                <a href="{{ path('first-mode') }}">Training words</a>
            </li>
            <li>
                <a href="{{ path('logout') }}">Logout</a>
            </li>
        </ul>
        <span class="navbar-brand navbar-right" style="padding-right: 22px; padding-top: 14px;"></span>
    </div>
</nav>
<div class="img">
    <div class="container">
        {% block body %}
            <div class="main-container">
            <div class="">
                <img src="https://freealexb.files.wordpress.com/2013/03/speakenglish-getout25-200-1.jpg" class="main-img"alt="">
            </div>
        </div>{% endblock %}

    </div>
</div>
{% javascripts '@TralangBundle/Resources/public/js/*'
                '@TralangBundle/Resources/public/js/ModeTraining/*'%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>
